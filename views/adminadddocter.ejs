                <div class="form-conteniar">
                    <div class="regbox">
        <form action="/docreg" method="post" enctype="multipart/form-data">
          <div class="input-name">
            <i class="fas fa-user-alt"></i>
            <input
              type="text"
              placeholder="First Name"
              name="firstname"
              class="name"
            />
            <span>
              <i class="fas fa-user-alt"></i>
              <input
                type="text"
                placeholder="Last Name"
                name="lastname"
                class="name"
              />
            </span>
          </div>
          <div class="input-name">
            <i class="fa fa-envelope email"></i>
            <input
              type="email"
              placeholder="Email"
              required
              name="email"
              class="text-name"
            />
          </div>
          <div class="input-name">
            <i class="fa-solid fa-graduation-cap"></i>
            <input
              type="text"
              placeholder="Docter type"
              required
              name="doctertype"
              class="text-name"
            />
          </div>
          <div class="input-name">
            <i class="fa-solid fa-book"></i>
            <input
              type="text"
              placeholder="Qualification"
              required
              name="qualification"
              class="text-name"
            />
          </div>
          <div class="input-name">
            <i class="fa fa-user-md"></i>
            <input
              type="text"
              placeholder="Experience"
              required
              name="experience"
              class="text-name"
            />
          </div>
          <div class="input-name">
            <i class="fa-solid fa-indian-rupee-sign"></i>
            <input
              type="text"
              placeholder="fees"
              required
              name="fees"
              class="text-name"
            />
          </div>
          <div class="input-name">
            <i class="fa fa-lock lock"></i>
            <input
              type="password"
              placeholder="Password"
              required
              name="password"
              class="text-name"
            />
          </div>
          <div class="input-name">
            <i class="fa fa-lock lock"></i>
            <input
              type="password"
              placeholder="Re-type-Password"
              required
              name="confirmpassword"
              class="text-name"
            />
          </div>
          <div class="input-name">
            <label for="image">Upload img</label>
            <input type="file" name="file" id="image" class="text-name" />
          </div>
          <div class="input-name">
            <input
              type="radio"
              name="radiogroup1"
              id="ravi"
              class="radio-button"
            />
            <label for="ravi" class="gender">Male</label>
            <input
              type="radio"
              name="radiogroup1"
              id="ravi1"
              class="radio-button"
            />
            <label for="ravi1" class="gender">Female</label>
          </div>
          <div class="input-name">
            <input type="checkbox" id="cb" class="check-button" />
            <label for="cb1" class="check">
              I agree with terms and conditions</label
            >
          </div>
          <div class="input-name">
              <button class="button" type="submit"><h2>
                  Register
              </h2>
            </button>
            <!-- <input class="button" type="submit" value="Register" /> -->
          </div>
        </form>
