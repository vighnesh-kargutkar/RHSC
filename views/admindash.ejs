<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1" />
        <title>Admin Dashboard</title>
        <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
        <link rel="stylesheet" href="css/admindash.css">
        <script src="https://kit.fontawesome.com/ac73c8797e.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <input type="checkbox" id="nav-toggle">
        <div class="sidebar">
             <div class="sidebar-admin">
                 <h1> <span class="la la-user"></span><span>Admin</span></h1>      
             </div>
             <div class="sidebar-menu">
                 <ul>
                     <li>
                         <a href="/admindash" class="active"><span class="la la-dashboard"></span>
                            <span>Dashboard</span>
                        </a>
                     </li>
                     <li>
                        <a href="/admindocter" ><span class="la la-medkit"></span>
                           <span>Doctor</span>
                       </a>
                    </li>                    
                    <li>
                        <a href="/adminpatient" ><span class="la la-users"></span>
                           <span>Patient</span>
                       </a>
                    </li>
                    <li>
                        <a href="/adminappoiment" ><span class="la la-calendar"></span>
                           <span>Appointment</span>
                       </a>
                    </li>
                    <li>
                        <a href="/adminPayment" ><span class="la la-money"></span>
                           <span>Payment</span>
                       </a>
                    </li>
                    <li>
                        <a href="/adminadddocter" ><span class="fa-solid fa-plus"></span>
                           <span>Add Doctor</span>
                       </a>
                    </li>
                 </ul>
                 </div>
                 </div>
                </div>
             <div class="main-content">
                 <header>
                     <h1>
                         <label for="nav-toggle">
                             <span class="la la-bars"></span>
                         </label>
                         Dashboard
                         </h1>
                         <!-- <div class="user-wrapper">
                             <img src="" width="30px" height="30px" alt="">
                         <div>
                             <h4>Vighnesh</h4>
                             <small> Admin</small>
                         </div>
                         </div> -->
            
                </header>
                <main>
                    <div class="cards">
                        <div class="card-single">
                            <div>
                                <h3>
                                    <%= doctotal%>
                                    Total Doctors
                                </h3>
                            </div>
                            <div>
                                <span class="la la-stethoscope"></span>
                            </div>
                        </div>
                        <div class="card-single">
                            <div>
                                <h3><%= ptotal%>
                                    Total Patients
                                </h3>
                            </div>
                            <div>
                                <span class="la la-users"></span>
                            </div>
                        </div>
                        <div class="card-single">
                            <div>
                                <h3><%= apptotal%> Total Appointments
                                </h3>
                            </div>
                            <div>
                                <span class="la la-calendar"></span>
                            </div>
                        </div>
                        
                    </div>
                    <div class="recent-grid">
                        <div class="doctors">
                            <div class="card">
                                <div class="card-header">
                                    <h3> Recent Doctors</h3>
                                    <!-- <button> See all<span claas="la la-arrow-right"></span></button> -->
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                    <table width="99%">
                                        <thead>
                                            <tr>
                                                <td> Name </td>
                                                <td> Specialists</td>
                                                <td>Appointment time</td>
                                                <td>Fees</td>
                                        
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <% applast.forEach(function(dat){ %>
                                             <tr>
                                                <td>Dr.<%= dat.docfname%></td>
                                                <td><%= dat.doctertype%></td>
                                                <td><%= dat.time%> <%= dat.date%></td>  
                                                <td><%= dat.fees%></td>
                                                <% })%>
                                             </tr>   
                                           </tbody>
                                    </table>
                                </div>
                                </div>
                            </div>
                        </div>
                        <div class="recent-box">
                                <div class="patients">
                                    <div class="card">
                                    <div class="card-header">
                                        <h3> Recent Patients</h3>
                                    
                                        <!-- <button> See all<span claas="la la-arrow-right"></span></button> -->
                                        </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                        <table width="99%">
                                            <thead>
                                                <tr>
                                                    <td> Name </td>
                                                    <td> Selected Doctor</td>
                                                    <td>Appointment time</td>
                                                    <td>Mobile Number</td>
                                            
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% applast.forEach(function(dat){ %>
                                             <tr>
                                                <td><%= dat.pfname%></td>
                                                <td>Dr.<%= dat.docfname%></td>
                                                <td><%= dat.time%> <%= dat.date%></td>
                                                <td><%= dat.pphone%></td>
                                                <% })%>
                                             </tr>   
                                           </tbody>
                                        </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </main>
        
        
    </body>
</html>